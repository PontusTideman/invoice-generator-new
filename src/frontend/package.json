{
  "name": "invoice-generator-frontend",
  "version": "1.0.0",
  "description": "Frontend for Invoice Generator",
  "main": "public/js/local-server.ts",
  "scripts": {
    "start": "ts-node public/js/local-server.ts",
    "build": "rimraf deploy/dist && tsc && node deploy/build.js",
    "build:prod": "npm run build && npm run optimize",
    "deploy": "node deploy/deploy.js",
    "dev": "nodemon --watch 'public/**/*.ts' --watch 'public/**/*.js' --watch 'public/**/*.ejs' --exec ts-node public/js/local-server.ts",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "clean": "rimraf deploy/dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "optimize": "node deploy/optimize.js",
    "ci": "npm run lint && npm run test:ci && npm run build:prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.17.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "tailwindcss": "^3.4.1",
    "daisyui": "^4.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/connect-flash": "^0.0.40",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "terser": "^5.24.0",
    "clean-css-cli": "^5.6.3",
    "imagemin-cli": "^6.0.0"
  }
}
