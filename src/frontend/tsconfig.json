{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./deploy/dist/js",
    "rootDir": "./public/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["public/js/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}