{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "deploy/dist/public",
    "rootDir": "public",
    "sourceMap": true,
    "types": [
      "node",
      "express",
      "express-session",
      "body-parser",
      "connect-flash",
      "supertest",
      "jest"
    ]
  },
  "include": [
    "public/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**"
  ]
} 